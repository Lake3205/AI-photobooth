# Environment Configuration Template
# Copy this to .env.development for local development
# Copy this to .env for production
# In CI/CD, set these variables in your pipeline secrets

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# Database Configuration
DB_HOST=your_db_host
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=darktech

# PHPMyAdmin Configuration (optional)
PHPMYADMIN_HOST=your_phpmyadmin_host
PHPMYADMIN_PORT=8080
PHPMYADMIN_USER=your_phpmyadmin_user
PHPMYADMIN_PASSWORD=your_phpmyadmin_password

# JWT Configuration
JWT_SECRET_KEY=your_secret_key_here
ALGORITHM=HS256

# Frontend API URL (for Vite - must start with VITE_)
VITE_API_URL=http://localhost:8000
